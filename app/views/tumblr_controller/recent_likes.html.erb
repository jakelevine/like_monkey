
<body data-spy="scroll" data-target="well" data-offset="50">

    <div class="well sidebar-nav span3">
    <ul class="nav nav-list">
	<li class="nav-header">Blogs You Follow</li>
	<% @likes.each do |blogs| %>
	  <li><a href="#<%= blogs[0] %>"><%= blogs[0] %></a></li>	
	<% end %>
    </ul>

	</div>
  

<div class="row">
  <div class="span8 offset5">

		<% @likes.each do |blogs| %>
			<div class="anchor" id ="<%= blogs[0] %>"></div>
			<%= blogs[0] %>

			<p>
				<% blogs[1].first(10).each do |posts| %>
					<a href="<%= posts[1] %>" target="_blank"><%= posts[0] %></a>
					<p>
				<% end %>


		<% end %>

	</div>
</div>

